<div class="container" id="divGridCategoria">
    <h4>
        Categorias</h2>
        <div class="row">
            <div class="col s1 offset-s10">
                <span class="flow-text">
                    <a class="btn-floating btn-large waves-effect waves-light green" title="Novo" onclick="abrirCadastroCategoria()"><i class="material-icons">add</i></a>
                </span>
            </div>
        </div>
        <div id="divContentCategoria"></div>
</div>
<script>
    function buscarGrid()
    {
        $.get('@Url.Action("BuscarGrid", "Categoria")').done(function (data) {
            $("#divContentCategoria").html(data);
        });
    }
    buscarGrid();
</script>